{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Orders Microservice Toolchain Deployment to Bluemix",
    "description": "orders microservice toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "jdbc-url": {
            "description": "JDBC URL",
            "type": "string"
        },
        "mysql-dbuser": {
            "description": "MySQL database user",
            "type": "string"
        },
        "mysql-dbpass": {
            "description": "Password for MySQL database user",
            "type": "password"
        },
        "new-relic-lic-key": {
            "description": "New Relic License Key",
            "type": "string"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "JDBC_URL",
            "key": "jdbc-url"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database User",
            "key": "mysql-dbuser"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Database Password",
            "key": "mysql-dbpass"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "New Relic License Key",
            "key": "new-relic-lic-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
